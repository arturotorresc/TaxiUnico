<body id="LoginForm">
  <div class="shadow bg-white m-auto pb-5 pt-5 w-xl-75 w-m-75 w-lg-75 w-sm-100">

  <h2 text-center text-dark>Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true,:placeholder=> "ejemplo@gmail.com", autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password, :placeholder=> "ContraseÃ±a", autocomplete: "current-password" %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end -%>

  <div class="actions">
    <%= f.submit "Log in" , class: 'btn btn-primary btn-lg w-75'%>
  </div>
<% end %>

<%= render "admins/shared/links" %>

</div>
</body>
