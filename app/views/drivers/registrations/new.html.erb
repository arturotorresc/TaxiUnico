<body id="LoginForm">
  <div class="shadow bg-white m-auto pb-5 pt-5 w-xl-75 w-m-75 w-lg-75 w-sm-100">

  <h2 text-center text-dark>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :first_name %><br />
    <%= f.text_field :first_name, autofocus: true,:placeholder=> "Pedro", autocomplete: "name" %>
  </div>

  <div class="field">
    <%= f.label :last_name %><br />
    <%= f.text_field :last_name, autofocus: true,:placeholder=> "Picapiedra", autocomplete: "last name" %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true,:placeholder=> "ejemplo@gmail.com", autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :location %><br />
    <%= f.text_field :location, autofocus: true,:placeholder=> "Monterrey", autocomplete: "location" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password,:placeholder=> "ContraseÃ±a", autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation,:placeholder=> "ContraseÃ±a", autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" , class: 'btn btn-primary btn-lg w-75'   %>
  </div>
<% end %>

<%= render "drivers/shared/links" %>

</div>
</body>
