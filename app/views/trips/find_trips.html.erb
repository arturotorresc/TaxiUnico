<script src='https://api.tiles.mapbox.com/mapbox-gl-js/v0.51.0/mapbox-gl.js'></script>
<link href='https://api.tiles.mapbox.com/mapbox-gl-js/v0.51.0/mapbox-gl.css' rel='stylesheet' />


<% if @trips.any? and not current_driver.trips.find_by(status: :assigned)%>
	<h2 class="text-uppercase font-weight-bold">Viajes en espera</h2>
  <%= render 'unassigned_trips', trips: @trips %>

<% elsif current_driver.trips.find_by(status: :assigned) %>

  <%= render 'assigned_trip' %>

<% else %>

	<h2 class="text-uppercase font-weight-bold">Por el momento no hay viajes...</h2>


<% end %>
