<p id="notice"><%= notice %></p>

<h1>Viajes</h1>
<% @trips.each do |t| %>
    <div>
      <div class="card text-center w-75 mx-auto">
        <div class="card-header">
           Viaje del dia <%= t.datetime.to_formatted_s(:short) %>
        </div>
        <div class="card-body">
          <div class="row">
            <div class="col">
              <%=fa_icon 'map-marker', style: "color:green"%> <%= "Origen: " + t.origin %><br>
              <%=fa_icon 'map-marker', style: "color:red"%> <%= "Destino: " + t.destiny %><br>
            </div>
            <div class="col">
              <% if current_client %>
                <%=fa_icon 'user'%> <%= "Conductor: " + t.driver.first_name %><br>
              <% elsif current_driver %>
                <%=fa_icon 'user'%> <%= "Cliente: " + t.client.first_name %><br>
              <% end %>
              <%=fa_icon 'clock-o'%> Duracion: <%= t.duration %> min<br>
            </div>
          </div>
        </div>
        <div class="card-footer text-muted">
           Tarifa: $  <%= t.rate %>
        </div>
      </div>
    </div>
    <br>
    <br>
<% end %>
